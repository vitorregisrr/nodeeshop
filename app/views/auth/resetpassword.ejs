<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="../css/forms.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <%- include('../includes/forms/errorBox') %>
                    <form action="/resetpassword" method="POST" class="mt-3">
                        <div class="form-group">
                            <label for="emailreset">Email</label>
                            <input type="text" class="form-control" id="emailreset" name="emailreset" value="<%= form ? form.values.emailreset : ''%>">
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-success">Reset password!</button>
                    </form>
                </div>
            </div>
        </div>    
    </main>
    <%- include('../includes/end.ejs') %>