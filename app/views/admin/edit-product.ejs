<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
    <form class="product-form" action="/admin/edit-product" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= prod.title %>">
        </div>
        <div class="form-control">
            <label for="desc">Description</label>
            <textarea type="text" name="desc" id="desc"><%= prod.desc %></textarea>
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="<%= prod.price %>">
        </div>
        <div class="form-control">
            <label for="img">Image</label>
            <input type="text" name="img" id="img" value="<%= prod.img %>">
        </div>
        <input type="hidden" name="id" value="<%= prod.id %>">
        <button class="btn" type="submit">Send Changes</button>
    </form>
</main>
    <%- include('../includes/end.ejs') %>